Chan39=("KaonCM")

ChanThree=("$Chan30" "$Chan31" "$Chan32" "$Chan33" "$Chan34" "$Chan35" "$Chan36" "$Chan37" "$Chan38" "$Chan39")

# Run the tasks:
for i in "${ChanTwo[@]}"
do
	echo $Exec -o Results/Kinematic/"Kine_"${i}".dat" -c "${i}"

	if [ "${i}" = "${OptArr[7]}" ]
	then
		$Exec -o Results/Kinematic/"Kine_"${i}".dat" -c "${i}"
	else
		$Exec -o Results/Kinematic/"Kine_"${i}".dat" -c "${i}" &
	fi
done

for i in "${ChanThree[@]}"
do
	echo $Exec -o Results/Kinematic/"Kine_"${i}".dat" -c "${i}"

	if [ "${i}" = "${OptThree[9]}" ]
	then
		$Exec -o Results/Kinematic/"Kine_"${i}".dat" -c "${i}"
	else
		$Exec -o Results/Kinematic/"Kine_"${i}".dat" -c "${i}" &
	fi
done
