Chan27=("TauPI")

ChanTwo=("$Chan20" "$Chan21" "$Chan22" "$Chan23" "$Chan24" "$Chan25" "$Chan26" "$Chan27")

Chan30=("MuonE")
Chan31=("MuonM")
Chan32=("TauEE")
Chan33=("TauET")
Chan34=("TauMM")
Chan34=("TauMT")
Chan35=("Tau2PI")
Chan36=("Kaon0E")
Chan37=("Kaon0M")
